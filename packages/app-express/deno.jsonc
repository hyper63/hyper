{
  "tasks": {
    "test": "deno lint && deno fmt --check && deno test -A --no-check",
    "cache": "deno cache --lock=deno.lock --lock-write deps.ts dev_deps.ts",
    "harness": "deno run --no-check --no-lock -A --reload ./harness.ts"
  },
  "fmt": {
    "files": {
      "include": ["./"]
    },
    "options": {
      "lineWidth": 100,
      "singleQuote": true,
      "semiColons": false
    }
  }
}
